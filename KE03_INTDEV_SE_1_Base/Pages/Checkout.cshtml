@page
@model CheckoutModel
@{
    ViewData["Title"] = "Bestellen";
}

<h2 class="mb-4">🧾 Bestelformulier</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Form.Naam" class="form-label">Voornaam</label>
        <input asp-for="Form.Naam" class="form-control" />
        <span asp-validation-for="Form.Naam" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Form.Achternaam" class="form-label">Achternaam</label>
        <input asp-for="Form.Achternaam" class="form-control" />
        <span asp-validation-for="Form.Achternaam" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Form.Adres" class="form-label">Adres</label>
        <input asp-for="Form.Adres" class="form-control" />
        <span asp-validation-for="Form.Adres" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Form.Woonplaats" class="form-label">Woonplaats</label>
        <input asp-for="Form.Woonplaats" class="form-control" />
        <span asp-validation-for="Form.Woonplaats" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Form.Email" class="form-label">E-mailadres</label>
        <input asp-for="Form.Email" class="form-control" />
        <span asp-validation-for="Form.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Form.Telefoonnummer" class="form-label">Telefoonnummer</label>
        <input asp-for="Form.Telefoonnummer" class="form-control" />
        <span asp-validation-for="Form.Telefoonnummer" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Form.Betaalmethode" class="form-label">Betaalmethode</label>
        <select asp-for="Form.Betaalmethode" class="form-select">
            <option value="">-- Kies uw bank --</option>
            <option>ABN AMRO</option>
            <option>Rabobank</option>
            <option>ING</option>
            <option>ASN Bank</option>
            <option>RegioBank</option>
        </select>
        <span asp-validation-for="Form.Betaalmethode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Bestelling afronden</button>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
